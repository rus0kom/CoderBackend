
<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New Product</h3>
        </div>
        <div class="card-body">
            <form action="/products/new-product" method="POST">
                <div class="form-group">
                    <input type="text" name="tittle" class="form-control" placeholder="Title" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Description" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <input type="number" name="price" class="form-control" placeholder="Price" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="thumbnail" class="form-control" placeholder="Thumbnail" autofocus>
                </div>
                <div class="form-group">
                    <input type="number" name="code" class="form-control" placeholder="Code" autofocus>
                </div>
                <div class="form-group">
                    <input type="number" name="stock" class="form-control" placeholder="Stock" autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
   